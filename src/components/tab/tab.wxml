<view class="tab-component">
    <block wx:for="{{style.items}}" wx:key="{{item.key}}">
        <view class="tab-component-item {{index === style.current?'active-class':''}}"
              style="width:calc(100% / {{style.items.length}});"
              bindtap="ontapitem"
              data-index="{{index}}"
              data-item="{{item}}">
            <text class="tab-component-item-text"
                  animation="{{index === style.current? scale:unscale}}">{{item.label}}
            </text>
        </view>
    </block>
    <view class="tab-mark"
          style="width:{{markStyle.width * 1.2}}px;transform: translateX({{markStyle.left - (markStyle.width * 0.1)}}px)"></view>
</view>