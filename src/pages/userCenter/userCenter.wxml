<top-panel value="个人中心" mode="text"></top-panel>
<!--<button open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">获取用户信息</button>-->
<view class="user-card">
    <view class="user-card-notice">
        <image src="/static/images/message@3x.png" class="user-card-notice-icon"></image>
    </view>
    <view class="user-card-info">
        <image class="user-card-info-avatar" src="{{userInfo.avatar}}"></image>
        <text class="user-card-info-name">{{userInfo.name}}</text>
        <text class="user-card-info-sign">{{userInfo.signature}}</text>
    </view>
    <view class="user-card-setting">
        <image src="/static/images/set@3x.png" class="user-card-setting-icon"></image>
    </view>
</view>
<view class="user-options">
    <block wx:for="{{optionData}}" wx:key="{{index}}">
        <navigator class="user-options-item" style="width:{{100 / optionData.length}}%;" url="{{item.link}}">
            <text class="user-options-item-num">{{userInfo[item.key]}}</text>
            <text class="user-options-item-label">{{item.text}}</text>
        </navigator>
        <view class="spliter" wx:if="{{index < optionData.length-1 || index == 0}}"></view>
    </block>
</view>
<go-add-ranking></go-add-ranking>
<tab-bar tabbar-data="{{tabbarData}}"></tab-bar>