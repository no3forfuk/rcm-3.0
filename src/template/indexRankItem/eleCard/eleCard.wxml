<view class="sub-ele-item" bindtap="link2Element" data-id="{{eleInfo.id}}">
    <view class="sub-ele-item-left">
        <view class="sub-ele-item-left-name">
            <text class="cm2-num-rate-s">8.6</text>
            <tetx class="cm-text sub-ele-item-left-name-text">{{eleInfo.element_name}}</tetx>
        </view>
        <view class="sub-ele-item-left-comment">
            <image class="sub-ele-item-left-comment-icon" src="../../../static/images/Comment@2x.png"></image>
            <text class="text-12s-17l-666c sub-ele-item-left-comment-text cm-ml-16">{{eleInfo.element_name + eleInfo.element_name +eleInfo.element_name}}</text>
        </view>
    </view>
    <image src="{{eleInfo.img}}" class="sub-ele-item-img" wx:if="{{eleInfo.img}}"></image>
    <view class="sub-ele-item-right" wx:if="{{!eleInfo.img}}" style="background-color: {{color}};">
        <text>{{eleInfo.element_name[0]}}</text>
    </view>
</view>